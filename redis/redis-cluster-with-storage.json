{
	"id": "/redis",
	"dependencies": [],
	"apps": [
		{
			"id": "master",
			"dependencies": [],
			"args": ["redis-server", "--appendonly", "yes"],
			"mem": 128.0,
			"cpus": 0.2,
			"instances": 1,
			"constraints": [["hostname", "UNIQUE"]],
			"labels": {
				"VERSION": "3.2.6",
				"TCP_PORT": "6379"
			},
			"container": {
				"type": "DOCKER",
				"docker": {
					"image": "registry.marathon.mesos/images/redis:3.2.6-alpine",
					"forcePullImage": true,
					"network": "USER",
					"privileged": true,
					"parameters": [
						{"key": "rm", "value": "true"},
						{"key": "volume-driver", "value": "rexray"},
						{"key": "volume", "value": "redis-master:/data"},
						{"key": "volume", "value": "/etc/localtime:/etc/localtime"},
						{"key": "dns", "value": "192.168.111.204"},
						{"key": "dns", "value": "192.168.111.205"},
						{"key": "dns", "value": "192.168.111.206"},
						{"key": "dns", "value": "192.168.111.207"}
					]
				}
			},
			"ipAddress": {
				"networkName": "dev-net"
			},
			"healthChecks": [
				{ "protocol": "TCP", "port": 6379, "path": "/" }
			]
		},
